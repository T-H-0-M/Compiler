constants
    ASSIGNMENTLENGTH = 10

typedef
    doctor def
        docId: int
    end

    pet def
       petId: int, 
       ownerId: int
    end

    doctorArray def 
        array [3] of doctor 
    end 

    petsArray def 
        array [3] of pet 
    end 

    arrayNumber def 
        number: int
    end

    assignmentArray def 
        array [ASSIGNMENTLENGTH] of arrayNumber
    end



arraydef
    assignments: assignmentArray,
    pets: petsArray,
    doctors: doctorArray

/**
Initialises all doctors in the doctors array
Pass by descriptor copy/array achieved
**/
func createDocs(doctors: doctorArray): void
    begin 
    doctors[0].docId = 0;
    doctors[1].docId = 1;
    doctors[2].docId = 2;
    end

/**
Initialises all pets in the pets array
Pass by descriptor copy/array achieved
**/
func createPets(pets: petsArray): void
    begin
    pets[0].petId = 0;
    pets[0].ownerId = 0;
    
    pets[1].petId = 1;
    pets[1].ownerId = 1;

    pets[2].petId = 2;
    pets[2].ownerId = 2;
    end


/** 
Assigns doctors to different pets (hardcoded)
pass by value achieved
**/
func assignDoc(docId: int, petId: int): bool
    begin
        if(counter < 6)
            return false;
        else
           assignments[counter] = docId; 
           assignments[counter + 1] = petId;
           counter = counter + 1;
        end
        return true;
    end

/**
